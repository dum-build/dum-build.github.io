@import '//fonts.googleapis.com/css?family=Fira+Mono|Varela+Round'

body
	margin 0
	font-family Varela Round

	a = #eff
	b = #e8ffff
	stripe-size = 1rem
	background repeating-linear-gradient(
		45deg, a, a stripe-size, b stripe-size, b (stripe-size * 2))

main
	margin 0 auto
	max-width 700px

min-width = 533px

@media all and (min-width: min-width)
	section
		display flex
		flex-direction row

		> h1
			flex-basis 6rem
			flex-shrink 0

		> .content
			flex-grow 1

	#dirs
		display flex
		flex-direction row
		align-items center

@media not all and (min-width: min-width)
	section
		display block
		> h1
			text-align center

	#dirs
		#arrow
			text-align center
			margin -0.25em 0

section
	> h1
		color #f80
		margin 0
		font-size 180%
		&#dum
			font-size 250%
	> .content
		background #f
		padding 0.25em
		margin-bottom 0.5em
		border-radius 2em
	p
		margin 0.5em 0

span.aside
	color #444

	&:before
		content '('
	&:after
		content ')'

a
	text-decoration none
	font-weight bold
	color #800

code
	font-family Fira Mono
	color #036

pre
	margin 0 auto
	width 22em
	font-family Fira Mono
	color #8

	-moz-tab-size 4
	tab-size 4

	.key, .str
		&:before
			color #8
			content '"'
		&:after
			color #8
			content '"'
	.key:after
		content '":'
	.key
		color #048
	.str
		color #c40
	.bool
		color #c08

	&.dir
		color black
